{
  "name": "react-server-side-rendering-presentation",
  "description": "Server-side Rendering React Presentation",
  "scripts": {
    "slides": "reveal-md slides.md --theme simple --css style.css",
    "startSlides": "npm run slides -- -w",
    "clean": "rimraf ../docs/react-server-side-rendering",
    "mkdir": "mkdir -p ../docs/react-server-side-rendering",
    "pregenerateStaticSite": "run-s -l -n clean mkdir",
    "generateStaticSite": "npm run slides -- --static ../docs/react-server-side-rendering"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "reveal-md": "^2.4.0",
    "rimraf": "^2.6.2"
  }
}
